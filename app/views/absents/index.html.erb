<div class="section-body">
  <div class="card">
    <div class="card-header">
      <h4>Absent Tracker</h4>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-md">
          <thead>
            <tr>
              <th>User</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @absents.each do |absent| %>
              <tr>
                <td><%= absent.user %></td>
                <td><%= absent.created_at.strftime('%A, %b %d') %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', stand_ups_path %>
