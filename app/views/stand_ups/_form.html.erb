<%= form_with(model: stand_up, local: true) do |form| %>
  <% if stand_up.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stand_up.errors.count, "error") %> prohibited this stand_up from being saved:</h2>

      <ul>
        <% stand_up.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.hidden_field :user_id, value: current_user.id %>
    <div class="col-sm-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-sm-2">
      <%= form.label :hours, 'Hours' %>
      <%= form.number_field :hours, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :info %>
    <%= form.text_area :info, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
